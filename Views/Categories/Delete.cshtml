@model WONDERLUST_PROJECT_ADMINs.Models.Category

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/Wonderlust.cshtml";
}

<div class="col-md-6 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Category</h4>
            <p class="card-description">
                Deactivate Here...
            </p>

            <div class="row">
                <div class="col-md-4">
                 
                        <form asp-action="Edit" asp-action="Delete" enctype="multipart/form-data">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="CategoryId" />

                            <input type="hidden" asp-for="CategoryName" class="form-control" />
                            <input type="hidden" asp-for="CategoryDescription" class="form-control" />
                            <input type="hidden" asp-for="CreatedAt" class="form-control" />
                            <input type="hidden" asp-for="ImageFile" class="form-control" accept="images/*" />
                      
                            <h4 class="card-title text-danger">Check or Uncheck the Box as per requirment</h4>
                            <div class="form-group form-check">
                                <label class="form-check-label">Is Active?
                                    <input class="form-check-input" asp-for="IsActive" /> 
                                </label>
                            </div>



                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-primary" />
                            </div>
                        </form>
    </div>
</div>

<div>
                <a class="btn btn-warning" asp-action="Index">Back to List</a>
</div>
</div>
</div>
</div>

