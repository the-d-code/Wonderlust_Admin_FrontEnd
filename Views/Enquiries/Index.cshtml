@model IEnumerable<WONDERLUST_PROJECT_ADMINs.Models.Enquiry>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Wonderlust.cshtml";
}

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<div class="col-lg-12 grid-margin stretch-card">

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Enquiry</h4>

            <div class="table-responsive">
                <table class="table table-striped">
    <thead>
                        <tr>
                            <th>
                                Enquiry ID
                            </th>
                            <th>
                                User ID
                            </th>
            <th>
                Contact
            </th>
            <th>
                EMail
            </th>
            <th>
                Enquiry
            </th>
            <th>
                Is Check           </th>
            <th>
                Date Of Enquiry
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EnquiryId)
                                </td><td>
                                    @Html.DisplayFor(modelItem => item.User.UserId)
                                </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Message)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBlock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            
            <td>
                                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.EnquiryId">Edit</a> |
                                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.EnquiryId">Details</a> |
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.EnquiryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>