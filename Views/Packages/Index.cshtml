@using Microsoft.EntityFrameworkCore.Internal;
@model IEnumerable<WONDERLUST_PROJECT_ADMINs.Models.Package>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Wonderlust.cshtml";
}
<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<div class="col-lg-12 grid-margin stretch-card">

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Packages</h4>

            <div class="table-responsive">
                <table class="table table-striped">
    <thead>
                        <tr>
                            <th>
                                Sr
                            </th>
                            <th>
                                Package ID
                            </th>
                            <th>
                               Package Name
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                Category
                            </th>
                            <th>
                                Amount
                            </th>
                            <th>
                               From Date
                            </th>
                            <th>
                                To Date
                            </th>
                            <th>
                                Country
                            </th>
                            <th>
                                State
                            </th>
                            <th>
                                City
                            </th>
                            <th>
                                Nights
                            </th>
                            <th>
                                Days
                            </th>
                            <th>
                                Image            
                            </th>
                            <th>
                                Bus
                            </th>
                            <th>
                                Hotel
                            </th>
                            <th>
                                Is Block
                            </th>
                           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
                            <tr>
                                <td> @(((Int32)1) + @Model.IndexOf(item)) </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PackageId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PackageName)
                                  </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FromDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ToDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Country.CountryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.State.StateName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City.CityName)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.NoOfNights)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NoOfDays)
                                </td>
                                <td>
                                    <a href="/images/package/@item.Image" target="_blank"><img src="~/images/package/@item.Image" width="500" class="img-thumbnail" /></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Bus.BusName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Hotel.HotelName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsBlock)
                                </td>
                                
        
           
            <td>
                                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.PackageId">Edit</a> |
                                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.PackageId">Details</a> |
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.PackageId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>