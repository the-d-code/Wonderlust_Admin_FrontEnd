@model WONDERLUST_PROJECT_ADMINs.Models.Package

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/Wonderlust.cshtml";
}

<h1>Delete</h1>

<h4>Package</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PackageId" />

            <input type="hidden" asp-for="PackageName" class="form-control" />

            <input type="hidden" asp-for="Amount" class="form-control" />

            <input type="hidden" asp-for="FromDate" class="form-control" />

            <input type="hidden" asp-for="ToDate" class="form-control" />

            <input type="hidden" asp-for="NoOfNights" class="form-control" />

            <input type="hidden" asp-for="NoOfDays" class="form-control" />

            <input type="hidden" asp-for="Image" class="form-control" />

            <input type="hidden" asp-for="Description" class="form-control" />

            <input type="hidden" asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId" />

            <input type="hidden" asp-for="CountryId" class="form-control" asp-items="ViewBag.CountryId" />

            <input type="hidden" asp-for="StateId" class="form-control" asp-items="ViewBag.StateId" />

            <input type="hidden" asp-for="CityId" class="form-control" asp-items="ViewBag.CityId" />

            <input type="hidden" asp-for="BusId" class="form-control" asp-items="ViewBag.BusId" />

            <input type="hidden" asp-for="HotelId" class="form-control" asp-items="ViewBag.HotelId" />
            <input type="hidden" asp-for="CreatedAt" class="form-control" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsBlock" /> @Html.DisplayNameFor(model => model.IsBlock)
                </label>
            </div>
           
                
              
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

