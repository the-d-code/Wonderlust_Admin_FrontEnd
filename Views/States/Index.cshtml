@model IEnumerable<WONDERLUST_PROJECT_ADMINs.Models.State>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Wonderlust.cshtml";
}

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<div class="col-lg-12 grid-margin stretch-card">

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">State</h4>

            <div class="table-responsive">
                <table class="table table-striped">

    <thead>
        <tr>
            <th>
                State
                            </th>
                            <th>
                      Country
                            </th>
            <th>
                Is Block
            </th>
            <th>
              Added Date            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StateName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Country.CountryName)
                                </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBlock)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
           
            <td>
                                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.StateId">Edit</a> |
                                    <a class ="btn btn-warning" asp-action="Details" asp-route-id="@item.StateId">Details</a> |
                                    <a class ="btn btn-danger" asp-action="Delete" asp-route-id="@item.StateId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>