@using Microsoft.EntityFrameworkCore.Internal;
@model IEnumerable<WONDERLUST_PROJECT_ADMINs.Models.Country>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Wonderlust.cshtml";
}

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<div class="col-lg-12 grid-margin stretch-card">
    
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Country</h4>

            <div class="table-responsive">
                <table class="table table-striped">
@*<table class="table">*@
    <thead>
        <tr>
            <th>
             Sr
            </th>
           
            <th>
               Country Name
            </th>
            <th>
               Is Block
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
                            <tr>
                                <td> @(((Int32)1) + @Model.IndexOf(item)) </td>
            <td>
                @Html.DisplayFor(modelItem => item.CountryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsBlock)
            </td>
            
            <td>
                                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.CountryId">Edit</a> |
                                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.CountryId">Details</a> |
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.CountryId">Delete</a>
                                </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>