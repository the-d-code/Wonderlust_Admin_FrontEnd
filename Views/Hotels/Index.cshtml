@using Microsoft.EntityFrameworkCore.Internal;
@model IEnumerable<WONDERLUST_PROJECT_ADMINs.Models.Hotel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Wonderlust.cshtml";
}

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>

<div class="col-lg-12 grid-margin stretch-card">

    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hotel</h4>

            <div class="table-responsive">
                <table class="table table-striped">
    <thead>
                        <tr>
                            <th>
                                Sr
                            </th>
                            <th>
                               Hotel Name
                            </th>
                            <th>
                                Image
                            </th>
                            <th>
                                Description
                            </th>
                            <th>
                                City
                            </th>
                            <th>
                                State                           
                            </th>
                            <th>
                                Country
                            </th>
                            <th>
                                Is Active
                            </th>
                            
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
                            <tr>
                                <td> @(((Int32)1) + @Model.IndexOf(item)) </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HotelName)
                                </td>
                                <td>
                                    <a href="/images/hotel/@item.Image" target="_blank"><img src="~/images/hotel/@item.Image" width="500" class="img-thumbnail" /></a>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Description)
                                </td>
            
                                <td>
                                    @Html.DisplayFor(modelItem => item.City.CityName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.State.StateName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Country.CountryName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                               
            <td>
                                    <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.HotelId">Edit</a> |
                                    <a class="btn btn-warning" asp-action="Details" asp-route-id="@item.HotelId">Details</a> |
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.HotelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>